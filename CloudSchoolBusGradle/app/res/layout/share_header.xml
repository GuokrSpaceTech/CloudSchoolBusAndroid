<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/share_header"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg01" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dip"
            android:background="#B0000000" >

            <TextView
                android:id="@+id/share_student_name"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="105dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/share_student_school_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dip"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_student_header_bg_la"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="12dip" >

            <com.Manga.Activity.widget.StudentHeaderView
                android:id="@+id/share_student_header_bg"
                android:layout_marginTop="10dp"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:onClick="headerPic" >
            </com.Manga.Activity.widget.StudentHeaderView>
            <ImageView
                android:id="@+id/guoshengri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guoshengri" 
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/share_student_age"
            android:layout_width="76dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/share_student_header_bg_la"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/student_age_bg"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<com.guokrspace.cloudschoolbus.parents.widget.ContactListCardItemView style="@style/MainLayout"
                                                                      xmlns:android="http://schemas.android.com/apk/res/android"
                                                                      xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView android:id="@+id/cardView"
                                        style="@style/MainCardView"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.guokrspace.cloudschoolbus.parents.widget.RoundCornerImageView
                android:id="@+id/teacher_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/small_padding"
                android:background="#40000000"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teacher_name"
                    style="@style/CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/material_blue_grey_950"
                    tools:text="小花老师"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:padding="@dimen/small_padding"
                        android:textColor="@color/description_color"
                        android:textSize="@dimen/description_size"
                        tools:text="星班级"/>

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="0dp"
                        android:layout_weight="25"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_padding"
                        android:textColor="@color/description_color"
                        android:textSize="@dimen/description_size"
                        tools:text="两小时前"/>

                    <TextView
                        tools:text="两小时前"
                        android:id="@+id/phonenumber"
                        android:layout_width="0dp"
                        android:layout_weight="25"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/small_padding"
                        android:textColor="@color/description_color"
                        android:textSize="@dimen/description_size"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.guokrspace.cloudschoolbus.parents.widget.ContactListCardItemView>
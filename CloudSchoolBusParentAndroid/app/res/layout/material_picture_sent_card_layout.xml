<?xml version="1.0" encoding="utf-8"?>

<com.guokrspace.cloudschoolbus.parents.widget.PictureSentCardItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/MainCardView"
        card_view:cardCornerRadius="@dimen/card_corner_radius">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/tiny_padding"
                android:layout_weight="17">

                <TextView
                    android:id="@+id/timestamp"
                    style="@style/CardBigTitle"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/small_padding"
                    tools:text="09-26"
                    android:textColor="@color/material_blue_grey_950"
                    android:layout_width="fill_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="83"
                android:orientation="vertical"
                android:padding="@dimen/small_padding">

                <com.android.support.customview.CustomGridView
                    android:id="@+id/image_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="@dimen/timeline_thumb_pic_spacing"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/timeline_thumb_pic_spacing" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tags_recycler_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_padding"/>

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_padding"
                    android:textColor="@color/description_color"
                    android:textSize="@dimen/description_size" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.guokrspace.cloudschoolbus.parents.widget.PictureSentCardItemView>
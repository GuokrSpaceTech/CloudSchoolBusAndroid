<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_tap_bg"
        android:clickable="true" >

        <Button
            android:id="@+id/main_top_move"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:background="@drawable/main_menu_button_selector"
            android:onClick="move" />

        <Button
            android:id="@+id/main_top_comeIn"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dip"
            android:background="@drawable/main_more_button_selector"
            android:onClick="comeIn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/main_bottom"
        android:layout_below="@+id/main_top" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/class_share"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/down_bottom_classshare"
                android:onClick="classShare" />

            <TextView
                android:id="@+id/class_share_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/home_status_notice"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bottom_notice"
                android:onClick="notification" />

            <TextView
                android:id="@+id/notification_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/home_status_notice"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bottom_activity"
                android:onClick="activity" />

            <TextView
                android:id="@+id/activity_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/home_status_notice"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/mychildren"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bottom_education"
                android:onClick="education" />

            <TextView
                android:id="@+id/mychildren_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/home_status_notice"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
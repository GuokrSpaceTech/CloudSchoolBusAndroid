<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFECE4" >

    <Button
        android:id="@+id/share_button"
        android:layout_width="30dip"
        android:layout_height="28dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="3dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/share_item_left_button_selector" />

    <TextView
        android:id="@+id/share_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/share_button"
        android:gravity="left|center_vertical"
        android:text="今天我的很生气"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_title"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/share_button"
        android:background="@drawable/class_share_text_bg_guokr"
        android:paddingBottom="5dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="25dip" >

        <TextView
            android:id="@+id/share_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#505050"
            android:textSize="16sp" />

        <View
            android:id="@+id/viewline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/just_one"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:background="#E5E5E5" />

        <TextView
            android:id="@+id/share_more"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewline"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:text="@string/more"
            android:textColor="#65B7CD" />

        <LinearLayout
            android:id="@+id/l_line_one"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_below="@id/share_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:orientation="horizontal" >

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_one"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_two"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_three"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_line_two"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_below="@id/l_line_one"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_four"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_five"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_six"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_line_three"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_below="@id/l_line_two"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_seven"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_eight"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>

            <com.Manga.Activity.widget.ShareImage
                android:id="@+id/share_image_nine"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/imageplaceholder" >
            </com.Manga.Activity.widget.ShareImage>
        </LinearLayout>
        <com.Manga.Activity.widget.ShareImage
            android:id="@+id/just_one"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_below="@id/l_line_three"
            android:layout_marginLeft="8dip"
            android:visibility="gone"
            android:background="@drawable/imageplaceholder" >
        </com.Manga.Activity.widget.ShareImage>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_layout"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/share_button" >

        <TextView
            android:id="@+id/share_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:textColor="#CFCFCF" />

        <Button
            android:id="@+id/confirm_receipt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/message_confirm_receipt"
            android:text="@string/confirm_receipt"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" >
        </Button>
    </RelativeLayout>

    <View
        android:id="@+id/yellow"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/share_message"
        android:layout_marginTop="3dp"
        android:background="#DABD91" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/yellow"
        android:background="#FFFFFFFF" />

</RelativeLayout>
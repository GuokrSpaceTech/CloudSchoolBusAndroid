<?xml version="1.0" encoding="utf-8"?>

<com.dexafree.materialList.cards.internal.CustomCardItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/MainCardView"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/card_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/teacher_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teacehr_name"
                        style="@style/CardTitle"
                        android:layout_above="@+id/kindergarten_name"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/teacher_avatar"
                        android:text="小花老师"
                        android:textColor="@color/material_blue_grey_950" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kindergarten_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/teacher_avatar"
                            android:padding="@dimen/big_padding"
                            android:textColor="@color/description_color"
                            android:textSize="@dimen/description_size"
                            tools:text="星星幼儿园" />

                        <TextView
                            android:id="@+id/timestamp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/teacher_avatar"
                            android:padding="@dimen/big_padding"
                            android:textColor="@color/description_color"
                            android:textSize="@dimen/description_size"
                            tools:text="2小时前" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_header"
                android:id="@+id/card_body">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imageView"/>

                <TextView
                    style="@style/CardTitle"
                    android:layout_alignBottom="@+id/imageView"
                    android:id="@+id/titleTextView"
                    tools:text="Title"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_content"
                    android:textColor="@color/description_color"
                    android:padding="@dimen/big_padding"
                    android:textSize="@dimen/description_size"
                    android:layout_below="@+id/imageView"
                    tools:text="Test description"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/card_bottom"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_below="@+id/card_body">

                <!-- A RecyclerView with some commonly used attributes -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tags_recycler_view"
                    android:scrollbars="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:id="@+id/share_button"
                    android:src="@drawable/ic_launcher"
                    android:padding="8dp">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:id="@+id/likes_button"
                    android:src="@drawable/ic_launcher"
                    android:padding="8dp">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:id="@+id/comments_button"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher"
                    android:padding="8dp">
                </ImageView>

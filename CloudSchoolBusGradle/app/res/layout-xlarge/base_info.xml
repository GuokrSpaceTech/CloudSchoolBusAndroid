<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEBE4" >

    <RelativeLayout
        android:id="@+id/base_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/class_share_top_bg" >

        <Button
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/class_share_main_body_top_selector"
            android:onClick="backMenu" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/base_info"
            android:textSize="25sp"
            android:textColor="#FFFFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_top"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:paddingBottom="20dip"
        android:background="@drawable/base_info_selector" >

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dip"
            android:text="@string/setting_name"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dip"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:id="@+id/line_two"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/name_title"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dip"
            android:background="#D6D6D6" />

        <TextView
            android:id="@+id/class_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/line_two"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dip"
            android:text="@string/student_class"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/class_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line_two"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:layout_marginTop="10dip"
            android:textColor="#000000"
            android:textSize="23sp" />

        <View
            android:id="@+id/line_three"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/class_title"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dip"
            android:background="#D6D6D6" />

        <TextView
            android:id="@+id/school_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/line_three"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dip"
            android:text="@string/student_school"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/school_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line_three"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:layout_marginTop="20dip"
            android:text="@string/loading"
            android:textColor="#000000"
            android:textSize="23sp" />
    </RelativeLayout>

</RelativeLayout>
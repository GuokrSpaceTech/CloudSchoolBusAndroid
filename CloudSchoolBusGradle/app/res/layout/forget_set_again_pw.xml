<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/input_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/class_share_top_bg" >

        <Button
            android:id="@+id/back"
            android:layout_width="37dip"
            android:layout_height="37dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/class_share_main_body_top_selector"
            android:onClick="backMenu" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/set_new_pw"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/input_top"
        android:background="#EEEBE4" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:text="@string/key_check_success"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#464646" />

        <EditText
            android:id="@+id/new_pw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="@string/please_input_new_pw"
            android:password="true"
            android:padding="2dp"
            android:singleLine="true"
            android:background="@drawable/binding_text_bg"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/new_pw_more"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_pw"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:ems="10"
            android:hint="@string/please_input_one_more_ag"
            android:password="true"
            android:singleLine="true"
            android:padding="2dp"
            android:background="@drawable/binding_text_bg"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@id/new_pw_more"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/logging_button_selector"
            android:onClick="wancheng"
            android:text="@string/wancheng"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="15dip"
        android:background="#FF93DEEF" >

        <TextView
            android:id="@+id/myDpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="@string/happybirthdaytitle"
            android:textColor="#05375a"
            android:textSize="20sp" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/myDpTitle"
            android:layout_marginTop="10dip"
            android:background="#57ADC6" />

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_margin="20dip"
            android:textSize="18sp"
            android:textColor="#05375a"
            android:gravity="center"
            android:text="@string/happybirthday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip" />


            <Button
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:layout_below="@+id/message"
                android:background="@drawable/logging_button_selector"
                android:text="@string/confirm"
                android:textColor="#FFFFFF"
                android:onClick="ok"
                android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>